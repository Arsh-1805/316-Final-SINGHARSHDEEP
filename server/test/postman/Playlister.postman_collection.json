          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('returns 400 for bad request', function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "const jsonData = pm.response.json();",
              "pm.test('success false', function () {",
              "    pm.expect(jsonData.success).to.be.false;",
              "});",
              "pm.test('reports error message', function () {",
              "    pm.expect(jsonData.errorMessage).to.match(/missing song data/i);",
              "});"
            ]
          }
        }
